<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Koulutehtävä</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">TilausDB (@ViewBag.LoggedStatus)</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="~/Home/Index">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item active"><a class="nav-link" href="~/Home/Login">Login <span class="sr-only">(current)</span></a></li>
                    <li class="nav-item active"><a class="nav-link" href="~/Home/Logout">Logout <span class="sr-only">(current)</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/About">Tietoja</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Customers/Index">Asiakkaat</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Home/Contact">Yhteystiedot</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Products/Index">Tuotteet</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Orders/Index">Tilaukset</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Orderlines/Index">Tilausrivit</a></li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Koulutehtävä app</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstraplux")
    @RenderSection("scripts", required: false)

    <script src="https://bootswatch.com/_vendor/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://bootswatch.com/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
